{
    "name": "template",
    "version": "1.0.0",
    "description": "template for web development",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/takamoja/mojamaru-template"
    },
    "scripts": {
        "build": "npm run task:ejs && cross-env NODE_ENV=production webpack -p",
        "start": "npm-run-all -p watch:*",
        "watch:serve": "cross-env NODE_ENV=development node devServer.js",
        "watch:ejs": "onchange './src/**/*.ejs' -- npm run task:ejs",
        "task:ejs": "node task/ejs.js"
    },
    "author": "Takayuki Mory",
    "license": "ISC",
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "address": "^1.0.3",
        "autoprefixer": "^9.1.5",
        "babel-loader": "^8.0.2",
        "browser-sync": "^2.24.7",
        "clean-webpack-plugin": "^0.1.19",
        "cross-env": "^5.2.0",
        "css-loader": "^1.0.0",
        "ejs": "^2.6.1",
        "eslint": "^5.4.0",
        "eslint-loader": "^2.1.0",
        "eslint-plugin-react": "^7.11.1",
        "glob": "^7.1.3",
        "make-dir": "^1.3.0",
        "mini-css-extract-plugin": "^0.4.2",
        "node-sass": "^4.9.3",
        "npm-run-all": "^4.1.3",
        "onchange": "^4.1.0",
        "postcss-loader": "^3.0.0",
        "sass-loader": "^7.1.0",
        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-dev-middleware": "^3.3.0",
        "webpack-hot-middleware": "^2.24.0",
        "webpack-manifest-plugin": "^2.0.4"
    }
}
